<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.eshc.travelplatform.ui.plan.PlanFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.plan.PlanFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_container"
                        android:layout_width="match_parent"
                        android:layout_height="282dp"
                        android:background="@color/etc_color"
                        android:paddingHorizontal="@dimen/content_padding"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_keep"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="14dp"
                            android:src="@drawable/ic_heart_fill"
                            app:layout_constraintEnd_toStartOf="@id/iv_search"
                            app:layout_constraintTop_toTopOf="@id/iv_search"
                            app:layout_constraintBottom_toBottomOf="@id/iv_search"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_search"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="60dp"
                            android:src="@drawable/ic_search"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="132dp"
                            android:layout_marginBottom="26dp"
                            android:fontFamily="@font/pretendard_semi_bold"
                            android:gravity="start"
                            android:text="@string/intro_home"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@id/cl_add"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_add"
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:layout_marginBottom="28dp"
                            android:background="@drawable/background_corner_round_main"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_container">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_course"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/content_padding"
                            android:layout_marginTop="28dp"
                            android:fontFamily="@font/pretendard_semi_bold"
                            android:text="@string/subtitle_first_home"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_course"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:paddingHorizontal="21dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintTop_toBottomOf="@id/tv_course"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_course" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_recommendation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/content_padding"
                            android:layout_marginTop="28dp"
                            android:fontFamily="@font/pretendard_semi_bold"
                            android:text="2월! 부산의 인기 지역을 모아봤어요"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rv_course" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_recommendation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:clipToPadding="false"
                            android:orientation="horizontal"
                            android:paddingHorizontal="21dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintTop_toBottomOf="@id/tv_recommendation"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_recommendation" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_plan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_plan_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="60dp"
                android:gravity="end"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_keep_plan"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/ic_heart_fill"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_search_plan"
                    android:layout_width="28dp"
                    android:layout_height="28dp"

                    android:src="@drawable/ic_search" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_plan_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/ll_plan_top">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="2022.02.22 - 02.24"
                    android:textColor="@color/title_color"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_more"
                    android:layout_width="18.4dp"
                    android:layout_height="4.4dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_more"
                    app:layout_constraintBottom_toBottomOf="@id/tv_day"
                    app:layout_constraintStart_toEndOf="@id/tv_day"
                    app:layout_constraintTop_toTopOf="@id/tv_day" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/pretendard_regular"
                    android:maxLines="1"
                    android:text="이 여행의 스타일이나 테마 혹은 소제목"
                    android:textColor="@color/content_color"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_day"
                    app:layout_constraintStart_toStartOf="@id/tv_day"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_plan_info" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottom_container"
            style="?attr/bottomSheetStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            tools:visibility="invisible">

            <View
                android:id="@+id/v_"
                android:layout_width="146dp"
                android:layout_height="3dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/hint_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/v_">

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>